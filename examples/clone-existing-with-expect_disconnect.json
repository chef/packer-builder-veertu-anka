{
  "variables": {
    "source_vm_name": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -x",
        "echo PRE REBOOT",
        "sudo reboot",
        "echo SHOULD NOT SEE THIS ECHO"
      ],
      "expect_disconnect": true
    },
    {
      "type": "shell",
      "inline": [
        "set -x",
        "echo REBOOTED"
      ]
    }
  ],
  "builders": [{
    "type": "veertu-anka-vm",
    "cpu_count": 9,
    "ram_size": "9G",
    "source_vm_name": "{{user `source_vm_name`}}"
  }]
}